<style>
  	{{ settings.font_heading | font_face }}
  	{{ settings.font_body | font_face }}

  	{%- assign font_body_bold = settings.font_body | font_modify: 'weight', 'bolder' -%}
  	{%- assign font_body_bold_italic = font_body_bold | font_modify: 'style', 'italic' -%}

  	{{ font_body_bold | font_face: font_display: 'swap' }}
  	{{ font_body_bold_italic | font_face: font_display: 'swap' }}

  	/* Gothic A1 */

  	@font-face {
          font-family: 'Cormorant Garamond';
          src: url({{ 'CormorantGaramond-Light.woff2' | asset_url }}) format('woff2'),
              url({{ 'CormorantGaramond-Light.woff' | asset_url }}) format('woff');
          font-weight: 300;
          font-style: normal;
          font-display: swap;
      }
  	@font-face {
  		font-family: 'Gothic A1';
  		src: url({{'GothicA1-Black.woff2' |  asset_url }}) format('woff2'),
  			url({{'GothicA1-Black.woff' | asset_url }}) format('woff');
  		font-weight: 900;
  		font-style: normal;
  		font-display: swap;
  	}
  	@font-face {
  		font-family: 'Gothic A1';
  		src: url({{'GothicA1-Bold.woff2' | asset_url }}) format('woff2'),
  			url({{'GothicA1-Bold.woff' | asset_url }}) format('woff');
  		font-weight: 700;
  		font-style: normal;
  		font-display: swap;
  }
  	@font-face {
  		font-family: 'Gothic A1';
  		src: url({{'GothicA1-Regular.woff2' | asset_url }}) format('woff2'),
  			url({{'GothicA1-Regular.woff' | asset_url }}) format('woff');
  		font-weight: 400;
  		font-style: normal;
  		font-display: swap;
  }

      :root {
          --color-background: {{ settings.color_background }};
          --color-text: {{ settings.color_text }};
          --color-heading: {{ settings.color_heading }};
          --color-link: {{ settings.color_link }};
          --color-gray:
          --page-width: {{ settings.page_width | divided_by: 10 }}rem;
          --page-width-margin: {% if settings.page_width == '1600' %}2{% else %}0{% endif %}rem;


  		{% case settings.font_heading %}
  			{% when 'shopify' %}
  		        --font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
  			{% when 'gothic-a1' %}
  	            --font-heading: 'Gothic A1', serif;
  		{% endcase %}

  		{% case settings.font_body %}
  			{% when 'shopify' %}
  		        --font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
  			{% when 'gothic-a1' %}
  		        --font-body: 'Gothic A1', serif;
  		{% endcase %}
      }
</style>
